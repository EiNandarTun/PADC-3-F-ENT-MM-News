<?xml version="1.0" encoding="utf-8"?>
<xyz.einandartun.news.viewpods.BeforeLoginUserViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/user_profile_view_pod_login">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/drawer_background"
        android:scaleType="centerCrop"
        />

    <net.aungpyaephyo.mmtextview.components.MMButton
        android:id="@+id/btn_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_above="@id/btn_to_register"
        android:layout_alignRight="@id/btn_to_register"
        style="@style/accent_button"
        />

    <net.aungpyaephyo.mmtextview.components.MMButton
        android:id="@+id/btn_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_medium_2"
        style="@style/accent_button"
        />

</xyz.einandartun.news.viewpods.BeforeLoginUserViewPod>